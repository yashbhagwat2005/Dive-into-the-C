#include <stdio.h>
int main(){
    int hour,min,sec;
    int t_sec;
    printf("Enter the time and convert it into seconds \n");
    printf("Enter hour:");
    scanf("%d",&hour);
    printf("Enter minute: ");
    scanf("%d",&min);
    printf("Enter second: ");
    scanf("%d",&sec);
    printf("The time is %d:%d:%d \n",hour,min,sec);
    t_sec = hour*60*60+min*60+sec;
    printf("%d",t_sec);
    
    return 0 ;
    
    
    
    

}
