#include <stdio.h> 

int main() {
    // declaring a,b as a integer variable
    int a, b;
    printf("Enter a: ");
    scanf("%d", &a);
    printf("Enter b: ");
    scanf("%d", &b);
    // adding b to a
    a+=b;
    // b = (a+b)-b ==> a
    b = a - b;  
    // a = (a+b)-a ==>b
    a = a - b;  
    printf("Value of a is %d\n", a);
    printf("Value of b is %d\n", b);
    printf("The values of a and b have been swapped successfully!");
    
    return 0;
}

// =)
